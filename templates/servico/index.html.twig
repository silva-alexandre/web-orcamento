{% extends 'base.html.twig' %}

{% block title %}Servico index{% endblock %}

{% block body %}
    <h1>Servico index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome_servico</th>
                <th>Descricao_servico</th>
                <th>Valor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for servico in servicos %}
            <tr>
                <td>{{ servico.id }}</td>
                <td>{{ servico.nomeServico }}</td>
                <td>{{ servico.descricaoServico }}</td>
                <td>{{ servico.valor }}</td>
                <td>
                    <a href="{{ path('app_servico_show', {'id': servico.id}) }}">show</a>
                    <a href="{{ path('app_servico_edit', {'id': servico.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_servico_new') }}">Create new</a>
{% endblock %}
